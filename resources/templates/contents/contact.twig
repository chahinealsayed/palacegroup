{% contents type='contact'  sort='position'%}
<section class="contact pt-4 container">
	<div class="row">
		<div class="col-md-6">
			<div>
				<h4 class="subtitle">CONTACT DETAILS</h4>
			</div>
			<div class="card-info pt-4">
				{% for content in contents %}
					<div class="contact-info">
						<h5>{{content.local.title}}</h5>
						<p class="excerpt">
							{{content.local.excerpt | nl2br}}
						</p>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="col-md-6">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d903.2923056817732!2d{{'location.longitude' | setting('#')}}!3d{{'location.latitude' | setting('#')}}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f6ca6d0170091%3A0x985d1943a4090d51!2sPalace%20Group!5e0!3m2!1sen!2sus!4v1695990700313!5m2!1sen!2sus" width="100%" height="300px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			{# <iframe width="100%" height="300px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=+{{'location.latitude' | setting('#')}}+,+{{'location.longitude' | setting('#')}}+&hl=en&z=14&amp;output=embed"></iframe> #}
		</div>
	</div>

	<div class="form">
		<p class="subtitle">CONTACT FORM</p>
		{{'website/contactform' | vue}}
	</div>
	{% endcontents %}
</section>
